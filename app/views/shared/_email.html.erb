<div class="modal fade" id="email" tabindex="-1" role="dialog" aria-labelledby="comercial" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-xs-10">
            <h5 class="modal-title" id="comercial"><strong>Contato</strong></h5>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <%= form_tag(send_mail_path) do %>
          <div class="form-group">
            <%= label_tag 'nome', 'Nome' %>
            <%= text_field_tag 'nome', nil, class: 'form-control', placeholder: 'Seu nome' %>
          </div>
          <div class="form-group">
              <%= label_tag 'email', 'Email' %>
              <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Seu e-mail' %>
          </div>
          <div class="form-group">
              <%= label_tag 'comentarios', 'Comentários' %>
              <%= text_area_tag 'comentarios', nil, class: 'form-control', rows: 4, placeholder: 'Comentários...' %>
          </div>
          <%= submit_tag 'Enviar', class: 'btn btn-default btn-about pull-right' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
