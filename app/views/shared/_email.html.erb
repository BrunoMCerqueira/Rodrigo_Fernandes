<div class="modal fade" id="email" tabindex="-1" role="dialog" aria-labelledby="comercial" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="comercial"><strong>Contate</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag(send_mail_path) do %>
          <div class="form-group">
            <%= label_tag 'nome', 'Nome' %>
            <%= text_field_tag 'nome', nil, class: 'form-control', placeholder: 'Seu nome' %>
          </div>
          <div class="form-group">
              <%= label_tag 'email', 'Email' %>
              <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Seu e-mail' %>
          </div>
          <div class="form-group">
              <%= label_tag 'comentarios', 'Comentários' %>
              <%= text_area_tag 'comentarios', nil, class: 'form-control', rows: 4, placeholder: 'Comentários...' %>
          </div>
          <%= submit_tag nil, class: 'btn btn-default btn-about pull-right' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
